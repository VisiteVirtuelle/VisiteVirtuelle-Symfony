{% extends ['base.html.twig'] %}

{% block title %}{{ parent() }} - {{ 'admin.dashboard.title'|trans }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-2">
            <ul class="navbar-nav">
                {% for group in groups %}
                    {% for link in links %}
                        <li>
                            <a href="{{ path('admin_dashboard', {'template' : group.link.name|lower}) }}">
                                {{ group.link.name }}
                            </a>
                        </li>
                    {% endfor %}
                {% endfor %}
            </ul>
        </div>

        <div class="col">
            {% include template  %}
        </div>
    </div>
{% endblock %}