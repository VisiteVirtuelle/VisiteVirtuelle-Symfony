{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/css/drop.css') }}">
{% endblock %}

{% block body_id 'visit_editor' %}
{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('admin_dashboard', {'template' : 'dashboard'}) }}">
                <span>Dashboard</span>
            </a>
        </li>
        <li class="breadcrumb-item">
            <a href="{{ path('visit_list') }}">
                <span>Visit</span>
            </a>
        </li>
        <li class="breadcrumb-item active">
            <span>Editor</span>
        </li>
    </ol>

    {{ parent() }}
{% endblock %}

{% block main %}
    <h2>
        <i class="fa fa-cog pr-1"></i>
        {{ 'visit.editor.title'|trans }}
    </h2>

    {{ form_start(form) }}
        <div class="row">
            <div class="col">
                <h5 class="text-center">Properties</h5>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <td class="float-right"><strong>Name</strong></td>
                                <td>{{ form_row(form.name) }}</td>
                            </tr>
                            <tr>
                                <td class="float-right"><strong>Owner</strong></td>
                                <td>{{ visit.owner.username }}</td>
                            </tr>
                            <tr>
                                <td class="float-right"><strong>Location</strong></td>
                                <td>{{ form_row(form.location) }}</td>
                            </tr>
                            <tr>
                                <td class="float-right"><strong>Surface</strong></td>
                                <td>{{ form_row(form.sqft) }}</td>
                            </tr>
                            <tr>
                                <td class="float-right"><strong>Price</strong></td>
                                <td>{{ form_row(form.price) }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col">
                <h5 class="text-center">Cover</h5>
                <div class="drop">
                    <div class="drop-body">
                        <i class="fa fa-cloud-upload"></i>
                        <h5>{{ 'util.drag&drop.title'|trans }}</h5>
                    </div>
                    <div class="drop-footer">
                        {{ form_row(form.cover) }}
                    </div>
                </div>
            </div>
        </div>

        <button type="submit">
            {{ 'security.register.submit'|trans }}
        </button>
    {{ form_end(form) }}

    <hr>

    <h4 class="text-center">Rooms</h4>
    <div class="row">
        <div class="col">
            <h5 class="text-center">Salle EC</h5>
            <div class="table-responsive">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <td class="float-right"><strong>Cell 1</strong></td>
                            <td>Cell 2</td>
                        </tr>
                        <tr>
                            <td class="float-right"><strong>Cell 3</strong></td>
                            <td>Cell 4</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col">
            <h5 class="text-center">360Â° Photo</h5>
            <div class="drop">
                <div class="drop-body">
                    <i class="fa fa-cloud-upload"></i>
                    <h5>{{ 'util.drag&drop.title'|trans }}</h5>
                </div>
                <div class="drop-footer">

                </div>
            </div>
        </div>
    </div>
{% endblock %}
